<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- make sure to set 'Copy To Output Directory' option for this file -->
  <!-- go to http://nlog-project.org/wiki/Configuration_file for more information -->

  <targets>
    <target name="async1" xsi:type="AsyncWrapper">
      <target name="logfile1" xsi:type="File" fileName="Logs\CLServer2_Trace.log" layout="(${date:format=MM/dd/yy HH\:mm\:ss}) ${message}" />
    </target>
    <target name="async2" xsi:type="AsyncWrapper">
      <target name="logfile2" xsi:type="File" fileName="Logs\CLServer2_Debug.log" layout="(${date:format=MM/dd/yy HH\:mm\:ss}) ${message}" />
    </target>
    <target name="async3" xsi:type="AsyncWrapper">
      <target name="logfile3" xsi:type="File" fileName="Logs\CLServer2_Info.log" layout="(${date:format=MM/dd/yy HH\:mm\:ss}) ${message}" />
    </target>
    <target name="async4" xsi:type="AsyncWrapper">
      <target name="logfile4" xsi:type="File" fileName="Logs\CLServer2_Warn.log" layout="(${date:format=MM/dd/yy HH\:mm\:ss}) ${message}" />
    </target>
    <target name="async5" xsi:type="AsyncWrapper">
      <target name="logfile5" xsi:type="File" fileName="Logs\CLServer2_Error.log" layout="(${date:format=MM/dd/yy HH\:mm\:ss}) ${message}" />
    </target>
    <target name="async6" xsi:type="AsyncWrapper">
      <target name="logfile6" xsi:type="File" fileName="Logs\CLServer2_Fatal.log" layout="(${date:format=MM/dd/yy HH\:mm\:ss}) ${message}" />
    </target>
    <target name="console" xsi:type="Console" layout="(${date:format=MM/dd/yy HH\:mm\:ss}) ${message}" />
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" maxlevel="Trace" writeTo="async1" />
    <logger name="*" minlevel="Trace" maxlevel="Trace" writeTo="console" />
    <logger name="*" minlevel="Debug" maxlevel="Debug" writeTo="async2" />
    <logger name="*" minlevel="Info" maxlevel="Info" writeTo="async3" />
    <logger name="*" minlevel="Info" maxlevel="Info" writeTo="console" />
    <logger name="*" minlevel="Warn" maxlevel="Warn" writeTo="async4" />
    <logger name="*" minlevel="Error" maxlevel="Error" writeTo="async5" />
    <logger name="*" minlevel="Fatal" maxlevel="Fatal" writeTo="async6" />
  </rules>
</nlog>
